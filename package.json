{
    "name": "ecommerce-store-backend",
    "version": "1.0.0",
    "description": "E-commerce store backend with TypeScript, Express, Drizzle ORM, and PostgreSQL",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "ts-node src/test.ts",
        "setup": "ts-node scripts/setup.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push"
    },
    "keywords": [
        "typescript",
        "express",
        "drizzle",
        "postgresql",
        "ecommerce"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.3",
        "postgres": "^3.4.3",
        "zod": "^3.22.4",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.10.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "drizzle-kit": "^0.20.9"
    }
}